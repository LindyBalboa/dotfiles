mode "power" {
	bindsym l exec i3lock -i /home/conner/Pictures/Camera/20150802_141759.png; mode "default"
	bindsym $mod+l exec i3lock -i /home/conner/Pictures/Camera/20150802_141759.png; mode "default"
	bindsym s exec i3lock -i /home/conner/Pictures/Camera/20150802_141759.png; exec systemctl suspend; mode "default"
	bindsym $mod+s exec i3lock -i /home/conner/Pictures/Camera/20150802_141759.png; exec systemctl suspend; mode "default"
	bindsym p exec shutdown -P now

	bindsym $mod+u mode "default"
}

